{% extends '_base.html.twig' %}

{% block pageTitle %}Home Page {% endblock %}

{% block main %}
<h1>List of users</h1>

    <table>
        <th>ID</th>
        <th>Name</th>
        <th>Role</th>
        <th>Password</th>
        {% for user in users %}
            <tr>

                <td>
                    {{ user.id }}
                </td>
                <td>
                    {{ user.username }}
                </td>
                <td>
                    {{ user.role }}
                </td>
                <td>
                    {{ user.password }}
                </td>

            </tr>
        {% endfor %}
    </table>
{% endblock %}